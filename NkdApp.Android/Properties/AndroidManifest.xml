<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="2" android:versionName="1.0.1" package="com.trylikes.nkd">
	<uses-sdk android:minSdkVersion="21" android:targetSdkVersion="29" />
